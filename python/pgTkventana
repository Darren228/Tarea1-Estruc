import tkinter as tk
ventana = tk.Tk()

ventana.title('Tkinter ventana - centrada')


ventana_ancho=300
ventala_altura = 200

# dimensionando en la ventana
pantalla_ancho = ventana.winfo_screenwidth()
pantalla_altura= ventana.winfo_screenheight()

# localizando el punto central
centro_x = int(pantalla_ancho/2 - ventana_ancho/2)
centro_y = int(pantalla_altura/2 - ventala_altura/2)

# configurando la posicion de la ventana centrado 
ventana.geometry(f'{ventana_ancho}x{ventala_altura}+{centro_x}+ {centro_y}')

ventana.mainloop