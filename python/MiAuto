       print(input("digite el numero de la placa: "))

       

    
    def Modelo():
        modelo = input ("digite el model odel vehiculo: ")
        print(f"el modelo del vehiculo es {modelo}")

    def Color():
        color = input("digite el color del vehiculo: ")
        print(f"El color del vehiculo es {color} ")

    def Marca():
        marca = input("Ingrese la mrca del vehiculo: ")
        print(f"La marca del vehiculo es {marca} ")
        
    def CantiPuertVehi():
     puertas = input("cuantas puertas tiene le vehiculo: ")
     print(f"La cantidad de puertas que tiene el vehiculo son {puertas} ")

    def tipcombus():
        combustible = input("Ingrese el tipo de combustible del vehiculo ")
        print(f"El tipo de combustible es {combustible} ")

    def TipoAuto():
        TipoAuto = input ("ingrese el tipo de vehiculo que es: ")
        print(f"el tipo de auto es {TipoAuto}")
     


ObjMiAuto = MiAuto

